<Alloy>
	<Window id="loginWin">
		<ScrollView id="scrollView">
			<ImageView id="topImg"/>
			<View id="content">
				<View id="usernameView">
					<Label id="userIcon"></Label>
					<TextField id="username" />
				</View>
				<View id="passwordView">
					<ImageView id="passwordIcon" />
					<TextField id="password" />
				</View>
				<Label id="forgetPass">Forgot password?</Label>
				<Button id="loginBtn" onClick="login">Login</Button>
				<View id="question">
					<Label id="questionLabel">Don't Have Account?</Label>
					<Label id="signup" onClick="openUserRegisterationPage">SIGN UP</Label>
				</View>
				<View id="lingContainer">
					<View id="leftLine"></View>
					<Label id="or">Or</Label>
					<View id="rightLine"></View>
				</View>
				<View id="faceContainer">
					<Label id="faceIcon"></Label>
				</View>
			</View>
			<View id="leftView"></View>
			<View id="rightView"></View>
		</ScrollView>
	</Window>
</Alloy>